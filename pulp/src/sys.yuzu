sub sys_brk(brk)
	if (brk >= MAX_ADDR()) then
		kprintln("Application heap exausted!")
		die()
	end
	if (brk > global_getBrk()) then
		kmemset(global_getBrk(), brk - global_getBrk(), 0)
	end
	if (brk == -1) then
		return global_getBrk()
	end
	global_setBrk(brk)
	return brk
end

